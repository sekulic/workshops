.row
  .col-lg-1
  .col-lg-10
    %h1 Categories
    
    %table.table.table-striped.table-bordered
      %tr
        %th Name
        %th Products
        %th Actions
    
      - categories.each do |category|
        %tr
          %td
            %h4 
              =category.name
          %td
            = link_to "products for #{category.name}", category_products_path(category.id), :class => "btn btn-default"
          %td
            = link_to 'Show', category, :class => "btn btn-info"
            = link_to 'Edit', edit_category_path(category), :class => "btn btn-warning"
            = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"
    
    %br
    
    = link_to 'New Category', new_category_path, :class => "btn btn-primary"
  .col-lg-1